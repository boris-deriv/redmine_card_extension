{
  "name": "Redmine Card Extension",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Redmine Card Extension for Connecting Pull Requests to Cards in Redmine",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*"],
      "js": ["scripts.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab"]
}
